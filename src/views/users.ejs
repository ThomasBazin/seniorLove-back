<%- include ('partials/navBar') %>

  <main class="container mt-4 d-flex">
    <div class="container-fluid">
      <div class="row">
        <%- include ('partials/sideNav') %>

          <!-- Main Content -->
          <div class="main_container col-md-9 p-3">

            <% if(locals.displayAll) {%>
              <h2>Tous les membres</h2>
              <p>Nombre d'utilisateurs : <%= users.length %>
              </p>
              <% } else {%>
                <h2>En attente de validation</h2>
                <p>Nombre Ã  inspecter : <%= users.length %>
                </p>
                <% } %>

                  <table class="table table-striped text-center">
                    <thead>
                      <tr>
                        <th>#id</th>
                        <th>Nom</th>
                        <th>Age</th>
                        <th>Status</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% users.forEach((user)=> { %>
                        <tr>
                          <td>
                            <%= user.id %>
                          </td>
                          <td>
                            <%= user.name %>
                          </td>
                          <td>
                            <%= user.age %>
                          </td>
                          <td class="fw-bold text-gray-900"
                            style="background-color: <%= user.status === 'active' ? 'rgba(0, 128, 0, 0.5)' : user.status === 'pending' ? 'rgba(255, 255, 0, 0.5)' : 'rgba(255, 0, 0, 0.5)' %>">
                            <%= user.status.toUpperCase() %>
                          </td>
                          <td>
                            <a href="/admin/users/<%=user.id  %>"
                              class="btn btn-link text-decoration-none">Inspecter</a>
                          </td>
                        </tr>
                        <% }) %>
                    </tbody>
                  </table>
          </div>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>